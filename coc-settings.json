{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "json",
    "mysql",
    "cpp",
    "php",
    "python",
    "html",
    "typescript",
    "jsx",
    "graphql",
    "vim",
    "scss"
  ],
  // GraphQL
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql",
        "javascript",
        "javascriptreact"
      ]
    }
  },

  // prettier
  "prettier.printWidth": 80,

  // coc-eslint
  "eslint.autoFixOnSave": true,

  "suggest.highPrioritySourceLimit": 100,
  "suggest.lowPrioritySourceLimit": 98,
  "snippets.priority": 99,
  "tabnine.priority": 99,
  "yank.priority": 97,

  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  // html config
  "html.enable": true,
  "html.trace.server": "messages",
  "html.format.enable": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,
  "html.autoClosingTags": true,
  // css config
  "css.enable": true,
  "css.trace.server": "off",
  "css.completion.triggerPropertyValueCompletion": true,
  "css.completion.completePropertyWithSemicolon": true,
  "css.validate": true,
  "css.colorDecorators.enable": true,
  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.pythonPath": "/usr/bin/python",

  // Snippets
  "coc.source.ultisnips.filetypes": ["text"],
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],

  // floaterm
  "floaterm.completion.enable": true,
  "floaterm.completion.shortcut": "floaterm",
  "floaterm.completion.priority": 5,

  // explorer
  "explorer.width": 40,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.hiddenRules": {
    "extensions": ["o", "a", "obj", "pyc", "git"],
    "filenames": ["env"],
    "patternMatches": ["^\\."]
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
